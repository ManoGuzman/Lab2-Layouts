<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/gradient">

    <ImageView
            android:id="@+id/logo"
            android:layout_width="148dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/tv"
            android:layout_marginTop="110dp"/>
    <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFDFD" android:textSize="34sp"
            android:fontFamily="@font/montserrat_alternates"
            android:text="Rating"
            android:textAlignment="center"
    />


    <TableRow
            android:paddingStart="30dp"
            android:layout_marginTop="20dp">

        <TextView
                android:id="@+id/tvPelicula"
                android:text="Pelicula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:fontFamily="@font/montserrat_alternates"
                android:textColor="#3E2723"/>

        <EditText
                android:id="@+id/etPelicula"
                android:width="200px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:fontFamily="@font/montserrat_alternates"
                android:textAlignment="center"
                android:hint="Digite el nombre de la pelicula"
                android:textSize="14dp"/>
    </TableRow>

    <TableRow
            android:paddingStart="30dp">
        <TextView
                android:id="@+id/tvGenero"
                android:text="Género"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:fontFamily="@font/montserrat_alternates"
                android:textColor="#3E2723"/>

        <EditText
                android:id="@+id/etGenero"
                android:width="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:textAlignment="center"
                android:hint="Digite el género"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_alternates"/>
    </TableRow>

    <TableRow
            android:paddingStart="30dp">
        <TextView
                android:id="@+id/tvDuracion"
                android:text="Duración"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:fontFamily="@font/montserrat_alternates"
                android:textColor="#3E2723"/>

        <EditText
                android:id="@+id/etDuracion"
                android:width="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:textAlignment="center"
                android:hint="Digite la duración en minutos"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_alternates"/>
    </TableRow>

    <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_column="1"/>
    </TableRow>

    <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <Button
                android:id="@+id/btnRatingMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CATÁLOGO"
                android:backgroundTint="#233977" android:textColor="#FFFFFF"
                android:layout_column="1"
                android:fontFamily="@font/montserrat_alternates"
        />
    </TableRow>
    <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btnRatingLogin"
                android:text="INICIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#233977" android:textColor="#FFFFFF"
                android:layout_column="1"
                android:fontFamily="@font/montserrat_alternates"/>
    </TableRow>
</TableLayout>